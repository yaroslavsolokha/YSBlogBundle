{% extends 'YSBlogBundle::base.html.twig' %}

{% block body %}
    <div class="main container">
        <div class="card">
            <div class="card-content">
                <h5>{{ blogPost.title }}</h5>
                {% autoescape %}
                    {{ blogPost.body|raw }}
                {% endautoescape %}
            </div>
            <div class="card-action">
                <a class="btn" href="{{ path('ys_blog_list') }}">Back</a>
            </div>
        </div>
    </div>
{% endblock %}