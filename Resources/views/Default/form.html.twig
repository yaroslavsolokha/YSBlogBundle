{% extends 'YSBlogBundle::base.html.twig' %}

{% block body %}
    <div class="main container">
        {{ form_start(form, { 'action': path('ys_blog_new', { 'id': app.request.attributes.get('id') }) }) }}
            <div class="card">
                <div class="card-content">
                    {{ form_widget(form) }}
                </div>
                <div class="card-action">
                    <span class="btn js-back-button-history">Back</span>
                    <input type="submit" class="btn" value="Save" />
                    {% if(app.request.attributes.get('id')) %}
                        <a class="btn" href="{{ path('ys_blog_delete', {'id': app.request.attributes.get('id')}) }}">Delete</a>
                    {% endif %}
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}